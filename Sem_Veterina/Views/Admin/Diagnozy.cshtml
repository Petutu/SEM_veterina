@using Sem_Veterina.Controllers
@using Sem_Veterina.Entity
@model DiagnozyViewModel
@{
    ViewData["Title"] = "Správa diagózů";
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <div class="filter-section">
        <form class="filter" asp-action="Diagnozy" method="get">
            <div class="filter-item">
                <label for="name">Název</label>
                @* filter-input-address *@
                <input class="filter-input" type="text" name="name" placeholder="Gastritida" />
            </div>
            <div class="filter-item">
                <label for="description">Popís</label>
                <input class="filter-input" type="text" name="description" placeholder="Zánět žaludeční sliznice" />
            </div>
            @* <div class="filter-item">
                <label for="animal">Jméno zvíře</label>
                <input class="filter-input" type="text" name="animal" placeholder="Alicia" />
            </div> *@
            <div class="filter-buttons">
                <button class="btn-filter" type="submit">
                    <img src="~/imgs/search.svg" alt="Vyhledavání">
                </button>
                <button class="btn-filter" type="submit">
                    <img src="~/imgs/reset.svg" alt="Vymazat filter" onclick="resetFormAndSubmit()">
                </button>
            </div>
        </form>
    </div>
    <div class="data-section">
        <div class="left-panel">
            <table class="table-list">
                <thead class="table-list-header">
                    <tr>
                        <th class="table-list-column-name">Název</th>
                        <th class="table-list-column-name">Popís</th>
                        @* <th class="table-list-column-name">Jméno zvíře</th> *@
                         @* <th class="table-list-column-name">Jméno lékaře</th> *@
                    </tr>
                </thead>
                <tbody class="table-list-body">
                    @foreach (var diagnoz in Model.Diagnozy)
                    {
                        <tr class="table-list-body-row">
                            <td class="table-list-body-column">@diagnoz.NÁZEV</td>
                            <td class="table-list-body-column">@diagnoz.POPIS</td>
                            @* <td class="table-list-body-column">@diagnoz.Jmenozvire</td> *@
                            @* <td class="table-list-body-column">@diagnoz.Jmenolekare</td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="right-panel" id="detailPanel">
            <form id="create-form" class="right-panel-form">
                <div class="right-panel-form-item filter-item">
                    <label for="name">Název</label>
                    <input class="right-panel-form-input filter-input" type="text" name="name" placeholder="Gastritida"
                        required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="description">Popís</label>
                    <input class="right-panel-form-input filter-input" type="text" name="description"
                        placeholder="Zánět žaludeční sliznice" required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="animal">Jméno zvíře</label>
                    <input class="right-panel-form-input filter-input" type="text" name="animal" placeholder="Alicie"
                        required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="doctor">Jméno lékaře</label>
                    <input class="right-panel-form-input filter-input" type="text" name="doctor" placeholder=""
                        required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="therapy">Popís léčby</label>
                    <input class="right-panel-form-input filter-input" type="text" name="therapy" placeholder=""
                        required />
                </div>
            </form>
        </div>
    </div>
    <footer class="footer-klinika">
        <ul class="crud-list">
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Vytvořit</button></li>
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Editovat</button></li>
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Odstranit</button></li>
        </ul>
    </footer>
</div>
<script type="module" src="~/js/filterUtils.js"></script>
