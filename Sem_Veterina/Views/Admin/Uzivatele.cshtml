@using Sem_Veterina.Controllers
@using Sem_Veterina.Entity
@model UzivateleViewModel
@{
    ViewData["Title"] = "Správa uživatelů";
    Layout = "_AdminLayout";
}

<div class="admin-container">
    <div class="filter-section">
        <form class="filter" asp-action="Uzivatele" method="get">
            <div class="filter-item">
                <label for="username">Uzername</label>
                @* filter-input-address *@
                <input class="filter-input" type="text" name="username" placeholder="AnnaSvobodova" />
            </div>
            <div class="filter-item">
                <label for="role">Role</label>
                <input class="filter-input" type="text" name="role" placeholder="Uživatel" />
            </div>
            <div class="filter-buttons">
                <button class="btn-filter" type="submit">
                    <img src="~/imgs/search.svg" alt="Vyhledavání">
                </button>
                <button class="btn-filter" type="submit">
                    <img src="~/imgs/reset.svg" alt="Vymazat filter" onclick="resetFormAndSubmit()">
                </button>
            </div>
        </form>
    </div>
    <div class="data-section">
        <div class="left-panel">
            <table class="table-list">
                <thead class="table-list-header">
                    <tr>
                        <th class="table-list-column-name">Uzername</th>
                        <th class="table-list-column-name">Heslo</th>
                        <th class="table-list-column-name">Role</th>
                        @* <th class="table-list-column-name">Jméno</th>
                        <th class="table-list-column-name">Příjmení</th> *@
                    </tr>
                </thead>
                <tbody class="table-list-body">
                    @foreach (var uzivatel in Model.Uzivatele)
                    {
                        <tr class="table-list-body-row">
                            <td class="table-list-body-column">@uzivatel.USERNAME</td>
                            <td class="table-list-body-column">@uzivatel.HESLO</td>
                            <td class="table-list-body-column">@uzivatel.ROLE</td>
                            @* <td class="table-list-body-column">@Jméno</td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="right-panel" id="detailPanel">
            <form id="create-form" class="right-panel-form">
                <div class="right-panel-form-item filter-item">
                    <label for="username">Uzername</label>
                    <input class="right-panel-form-input filter-input" type="text" name="username"
                        placeholder="AnnaSvobodova" required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="password">Heslo</label>
                    <input class="right-panel-form-input filter-input" type="text" name="password" placeholder=""
                        required />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="role">Role</label>
                    <input class="right-panel-form-input filter-input" type="text" name="role"
                        placeholder="Běžný uživatel" />
                </div>

                <div class="right-panel-form-item filter-item">
                    <label for="name">Jméno</label>
                    <input class="right-panel-form-input filter-input" type="email" name="name" placeholder="Anna" />
                </div>
                <div class="right-panel-form-item filter-item">
                    <label for="surname">Příjmení</label>
                    <input class="right-panel-form-input filter-input" type="email" name="surname"
                        placeholder="Svobodova" />
                </div>
            </form>
        </div>
    </div>
    <footer class="footer-klinika">
        <ul class="crud-list">
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Vytvořit</button></li>
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Editovat</button></li>
            <li class="crud-list-item"><button class="crud-list-btn btn-filter">Odstranit</button></li>
        </ul>
    </footer>
</div>
<script type="module" src="~/js/filterUtils.js"></script>
