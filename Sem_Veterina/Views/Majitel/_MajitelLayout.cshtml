@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="cs">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Uživatel</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Podkova:wght@400..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Sem_Veterina.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/majitel.css" asp-append-version="true" />
</head>

<body>
    <header class="header">
        <nav class="nav">
            <a class="logo-link" asp-controller="Majitel" asp-action="Index"><img class="logo-link-svg"
                    src="~/imgs/logo.svg" alt="Logo Veterinarni Kliniky"></a>
            <ul class="nav-list-admin">
                <li class="nav-list-admin-item"><a class="nav-list-admin-link" href="/Pristroje">Přístroje</a></li>
                <li class="nav-list-admin-item"><a class="nav-list-admin-link" href="/Zdravotniakce">Vyšetření</a></li>
                <li class="nav-list-admin-item"><a class="nav-list-admin-link" href="/Zdravotniakce">Lab.výsledky</a>
                </li>
                <li class="nav-list-admin-item"><a class="nav-list-admin-link" href="/Zdravotniakce">Zákroky</a></li>
                <li class="nav-list-admin-item"><a class="nav-list-admin-link" href="/Zdravotniakce">Diagnózy</a></li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 Sem Veterina - Admin Sekce</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
